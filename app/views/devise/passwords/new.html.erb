<div class='login-page'>
  <div class='form-containter'>
    <h2>Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: 'Email',
                    label: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset instructions" %>
      </div>
    <% end %>

    <div class='logfooter'>
      <%= link_to 'Login', new_session_path(resource_name), class: 'button button-blue' %>
      <%= link_to 'Sign Up', new_registration_path(resource_name), class: 'button button-blue' %>
    </div>
  </div>
</div>
