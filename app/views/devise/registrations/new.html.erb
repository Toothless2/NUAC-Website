<div class='login-page'>
  <div class='form-containter'>
    <h2>Sign Up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :name, required: true, autofocus: true, placeholder: 'Name', label: false %>
        <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email" },
                    placeholder: 'Email',
                    label: false %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    placeholder: 'Password',
                    label: false %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    label: false,
                    placeholder: 'Confirm Password' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign Up" %>
      </div>
    <% end %>

    <div class='logfooter'>
      <%= link_to 'Login', new_session_path(resource_name), class: 'button button-blue' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'button button-blue' %>
    </div>
  </div>
</div>