<h1 style='display:inline-block'>News Feed</h1>
<%= link_to 'ðŸ–‹ Create New', new_post_path, method: :get, class:'link-button news-new-button' %>
<hr/>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
