<article>
  <h2><%= @post.title %></h2>

  <div class='post-display'>
    <%= markdown_body(@post.body).html_safe %>
  </div>

  <% if admin_user? %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
  <%end%>
  <%= link_to 'Back', posts_path %>
</article>
