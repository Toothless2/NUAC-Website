<!DOCTYPE html>
<html>
  <head>
    <title>NUACWebsite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class='container' style='font-size:1.5em;text-align:right'>
      <% if user_signed_in?%>
        <%= link_to current_user.name, edit_user_registration_path, method: :get, class: 'button'%>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'button button-blue'%>
      <%else%>
        <%= link_to 'Login', new_user_session_path, class: 'button button-blue'%>
      <%end%>
    </div>
    <div class='container'>
      <nav class='navbar'>
        <ul>
          <li><%= link_to root_path do%>
              <img src=<%= asset_path 'Logo.png' %>>
              <%end%>
          </li>
          <li><%= link_to "About Us", "#"%></li>
          <li><%= link_to "Events & Calender", "#"%></li>
          <li><%= link_to "Club Records", "#"%></li>
          <li><%= link_to "Alumni", "#"%></li>
          <li><%= link_to "Contact Us", "#"%></li>
        </ul>
      </nav>
      <br/>
      <br/>
      <div class='container'>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
