
<%= simple_form_for(@record) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :score %>
    <%= f.input :round, collection: [['portsmouth', 'Portsmouth'], ['bray1', 'Bray I'], ['worcester', 'Worcester'], ['vegas', 'Vegas'], ['fita18', 'Fita 18'], ['york', 'York'], ['hereford', 'Hereford'], ['bristol1', 'Bristol I'], ['bristol2', 'Bristol II'], ['bristol3', 'Bristol III'], ['bristol4', 'Bristol IV'], ['bristol5', 'Bristol V'], ['fita70', 'Fita 70'], ['other', 'Other']], value_method: :first, label_method: :second, selected: 0 %>
    <%= f.input :bowstyle, collection: [['recurve', 'Recurve'], ['compound', 'Compound'], ['barebow', 'Barebow'], ['longbow', 'Longbow'], ['afb', 'American Flat Bow'] ], value_method: :first, label_method: :second, selected: 0 %>
    <%= f.input :gender, collection: [['Male', 'male'],['Female', 'female']], default: 0%>
    <%= f.input :achived_at, as: :string, input_html: {type: :date, value: Date.today} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
